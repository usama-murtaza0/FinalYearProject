<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %><form>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="container">
  <div class="row py-5 mt-4 align-items-center">
    <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
      <%= image_tag 'form_signup.svg', class: "img-fluid mb-3 d-none d-md-block" %>  
      <h1>Forgot Your Password?</h1>
    </div>
    <div class="col-md-7 col-lg-6 ml-auto">
      <form action="#">
        <div class="row">
          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-envelope text-muted"></i>
              </span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-white border-left-0 border-md", placeholder: "Email Address" %> 
          </div>
          <div class="form-group-sign_up col-lg-12 mx-auto mb-0">
            <%= f.submit "Send me reset password instructions" , { class: "btn btn-primary btn-block py-2 font-weight-bold" } %>
          </div>
          <div class="text-center w-100">
            <p class="text-muted font-weight-bold">Already Registered? <a href="<%= new_user_session_path %>" class="text-primary ml-2">Login</a></p>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<% end %>



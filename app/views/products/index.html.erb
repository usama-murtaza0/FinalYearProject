<div class="py-5">
    <div class="container">
    <div class="row hidden-md-up">  
        <% @products.each do |product| %>
            <div class="col-md-3 card-parent">
                <div class="card">
                <a href="<%= product_path(product.id) %>">
                <div class="card-block">
                    <h3 class="card-header"><%= product.title %></h3>
                    <div class="card-body">
                        <h5 class="card-title"><%= product.price %> 
                        <label class="card-subtitle text-muted">Rs</h5>
                        </label>
                    </div>
                    <img src="<%= product.picture %>" class="d-block user-select-none" width="100%" height="250" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice">
                        <rect width="30%" height="100%" fill="#868e96"></rect>
                    </img>
                    <div class="card-body">
                        <h5 class="card-title"><%= product.quantity %></h5>
                        <h6 class="card-subtitle text-muted">Available</h6>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><small><%= truncate(product.description, :length => 20) %></small></p>
                    </div>
                </a>
                    <% 
                      url = current_user ? line_items_path(:product_id) : new_user_session_path                 
                    %>
                    <%= button_to "Add #{product.title} to cart", url, { class: "btn btn-primary" } %>
                </div>
                </div>
            </div>
        <% end %>
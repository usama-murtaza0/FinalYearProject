<script>
  function setMarkerOnMap() {
      const myLatLng = { lat: <%=@user.latitude.to_f %>, lng: <%= @user.longitude.to_f %> };
      const map = new google.maps.Map(document.getElementById("map"), {
          zoom: 16,
          center: myLatLng,
      });

      marker = new google.maps.Marker({
          position: myLatLng,
          map
      });

      var infowindow = new google.maps.InfoWindow({
          content: '<a href="https://www.google.com/maps/@<%=@user.latitude.to_f %>,<%= @user.longitude.to_f %>,17z" target="blank"> Open in google maps'
      });
      infowindow.open(map, marker);
  }
</script>
<div class ="py-3">
	<div class="container">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">			
						<div class="preview-pic tab-content">
						  <div class="tab-pane active" id="pic-1"><img src="<%= @product.pictures[0] %>" /></div>
            </div>
						<ul class="preview-thumbnail nav nav-tabs">
              <% @product.pictures.each do |picture| %>
                <li><a data-toggle="tab"><img src="<%= picture.url %>" /></a></li>
              <% end %>
						</ul>
					</div>
					<div class="details col-md-3">
						<h3 class="product-title"><%= @product.title %></h3>
						<p class="product-description"><%= @product.description %></p>
            <% if @product.sale? %>
						  <h4 class="price">Price: <span class="price text-decoration-line-through"><%= @product.price %> Rs</span></h4>
					  	<h4 class="price">Current Price: <span><%= @product.price-(@product.price*@product.sale/100) %> Rs</span></h4>
            <% else %>
              <h4 class="price">Price: <span><%= @product.price %> Rs</span></h4>
            <% end %>
            <h5 class="sizes">Category:
							<span class="size" data -toggle="tooltip" title="small"><%= @category.title %></span>
						</h5>
            <h5 class="sizes">Size:
              <% case @product.size %>
                <% when "Small" %>
                  <span class="size" data-toggle="tooltip" title="small">S</span>
                <% when "Medium" %>
                  <span class="size" data-toggle="tooltip" title="medium">M</span>
                <% when "Large" %>
                  <span class="size" data-toggle="tooltip" title="large">L</span>
                <% when "Extra Large"%>
                  <span class="size" data-toggle="tooltip" title="xtra large">XL</span>
                <% else %>
                  <h6>No sizes given for this product</h6>
              <% end %>
            </h5>
						<h5 class="colors">Packing:
							<span class="size" data-toggle="tooltip" title="small"><%= @product.packing %></span>
						</h5>
						<div class="action">
            <!--
              <button class="add-to-cart btn btn-default" type="button">add to cart</button>
							<button class="like btn btn-default" type="button">add review</button>
            -->
              <div style="display:inline-block;">
                <%= button_to "Add to cart", line_items_path(:product_id => @product.id), { class: "add-to-cart btn btn-default" } %>
                <%= button_to "Add a Review", new_review_path(:product => @product.id), { class: "like btn btn-default" } %>
              </div>
            </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

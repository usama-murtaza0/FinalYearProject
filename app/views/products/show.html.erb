<div class="py-3">
    <div class="container">
      <div class="row hidden-md-up">  
        <div class="card-single-show col-md-6">
            <h3 class="card-header"><%= @product.title %></h3>
            <div class="card-body">
                <h5 class="card-title"><%= @product.price %></h5>
                <h6 class="card-subtitle text-muted">Rs</h6>
            </div>
            <% if @product.picture.present? %>
              <img src="<%= @product.picture %>" class="d-block user-select-none" width="100%" height="250" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice"></img>
            <% else %>
              <%= image_tag "placeholder_product.png" , class: "placeholder-img" %>
            <% end %>
          </div>  
        </div> 
          <div class="card-single-show col-md-6">
            <div class="card-body">
              <p class="card-text"><small><%= @product.description %></small></p>
            </div>
          </div>
          <%= button_to "Add #{@product.title} to cart", line_items_path(:product_id => @product.id), { class: "btn btn-primary form-control" } %>
          <br>
      </div>
    </div> 
  </div>
</div>     

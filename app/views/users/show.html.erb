<div class="py-3">
    <div class="container">
        <div class="row hidden-md-up">
            <div class="card mb-3">
                <h3 class="card-header"><%= @user.user_name %></h3>
                <div class="card-body">
                    <h5 class="card-title"><%= @user.email %></h5>
                </div>
                <% if @user.picture.present? %>
                    <img src="<%= @user.picture %>" class="d-block user-select-none" width="100%" height="250" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice"></img>
                <% else %>
                    <%= image_tag "placeholder_user.png" , class: "placeholder-img" %>
                <% end %>
                <div class="card-body">
                    <p class="card-text"><small><%= @user.physical_store_address %></small></p>
                </div>
                <%= link_to "Products listed by this user", products_user_path(@user.id), { class: "btn btn-primary form-control" } %>
            </div>
        </div>
    <div>
</div>

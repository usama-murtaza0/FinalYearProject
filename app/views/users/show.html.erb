<div class="py-3">
    <div class="container">
        <div class="row hidden-md-up">
            <div class="card mb-3">
                <h3 class="card-header"><%= @user.user_name %></h3>
                <div class="card-body">
                    <h5 class="card-title"><%= @user.email %></h5>
                </div>
                <% if @user.picture.present? %>
                    <img src="<%= @user.picture %>" class="placeholder-single-show-img" width="100%" height="400" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice"></img>
                <% else %>
                    <%= image_tag "placeholder_user.png" , class: "placeholder-single-show-img" %>
                <% end %>
                <div class="card-body">
                    <p class="card-text"><small><%= @user.city %></small></p>
                </div>
                <div class="card-body">
                    <p class="card-text"><small><%= @user.postal_code %></small></p>
                </div>
                <div class="card-body">
                    <p class="card-text"><small><%= @user.state %></small></p>
                </div>
                <div class="card-body">
                    <p class="card-text"><small><%= @user.address %></small></p>
                </div>
                <% if current_user.user_type == "Admin" %>
                    <%= link_to "Order history", orders_user_path(@user.id), { class: "btn btn-primary form-control" } %>
                    <br>
                    <%= link_to "Products listed by this user", products_user_path(@user.id), { class: "btn btn-primary form-control" } %>
                    <br>
                    <%= render'user_check' %>
                <% else %>
                    <%= link_to "Edit your profile", edit_user_path(@user.id), { class: "btn btn-primary form-control" } %>
                    <br>
                    <%= link_to "Create a new listing", new_product_path, { class: "btn btn-primary form-control" } %>
                    <br>
                    <%= link_to "Preiously listed Products listed by you", products_user_path(@user.id), { class: "btn btn-primary form-control" } %>
                    <br>
                    <%= link_to "Order history", orders_user_path(@user.id), { class: "btn btn-primary form-control" } %>
                <% end %>
            </div>
        </div>
    <div>
</div>
</div>

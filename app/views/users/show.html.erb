<div class="card mb-3">
    <h3 class="card-header"><%= @user.user_name %></h3>
    <div class="card-body">
        <h5 class="card-title"><%= @user.email %></h5>
    </div>
    <img src="<%= @user.picture %>" class="d-block user-select-none" width="25%" height="350" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice">
        <rect width="30%" height="30%" fill="#868e96"></rect>
    </img>
    <div class="card-body">
        <p class="card-text"><small><%= @user.physical_store_address %></small></p>
    </div>
    <%= link_to "Create a new Listing", new_product_path(@product), { class: "btn btn-primary form-control" } %>
</div>
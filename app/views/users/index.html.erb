<% if current_user.user_type == "Customer" %>
    <%= link_to "Home", root_path %>
<% else %>
    <% @current_user.products.each do |product| %>
    <div class="card mb-3">
        <h3 class="card-header"></h3>
        <div class="card mb-3">
            <h3 class="card-header"><%= product.title %></h3>
            <div class="card-body">
                <h5 class="card-title"><%= product.price %></h5>
                <h6 class="card-subtitle text-muted">Rs</h6>
            </div>
            <img src="<%= product.picture %>" class="d-block user-select-none" width="25%" height="250" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice">
            <rect width="30%" height="100%" fill="#868e96"></rect>
            </img>
            <div class="card-body">
                <p class="card-text"><small><%= truncate(product.description, :length => 60) %></small></p>
            </div>
            <%= link_to "See Details", product %>
        </div>
    </div>
    <% end %> 
<% end %>
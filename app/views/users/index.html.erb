<% if current_user.user_type == "Customer" %>
    <%= link_to "Home", root_path %>
<% else %>
   <div class="py-5">
    <div class="container">
    <div class="row hidden-md-up">  
        <% @users.each do |user| %>
            <div class="col-md-4">
                <div class="card">
                <a href="<%= user_path(user.id) %>">
                <div class="card-block">
                    <h3 class="card-header"><%= user.user_name %></h3>
                    <div class="card-body">
                        <h5 class="card-title"><%= user.contact %></h5>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= user.user_type %></h5>
                    </div>
                    <img src="<%= user.picture %>" class="d-block user-select-none" width="100%" height="250" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice">
                        <rect width="30%" height="100%" fill="#868e96"></rect>
                    </img>
                    <div class="card-body">
                        <p class="card-text"><small><%= user.email %></small></p>
                    </div>
                </div>
                </a>
                </div>
            </div>
        <% end %>    
<% end %>
<%= form_tag charges_path do %>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <br>
  <div class="charges-center" >
  <div class="container bootstrap snippets bootdeys">
    <div class="row">
      <div class="col-md-4 col-sm-6 charges-content-card">
        <div class="charges-card-big-shadow">
          <div class="charges-card-just-text" data-background="color" data-color="blue" data-radius="none">
            <div class="content">
              <h6 class="category"><%= @order.total_bill %></h6>
              <h4 class="title">
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-description="Order payment"
                  data-amount="<%= @order.total_bill %>"
                  data-locale="auto"></script></h4>
              <p class="description">This is for the payment of your recent purchase from our Organic Products Store Application</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br>
    <%= hidden_field_tag 'order_id', @order.id %>
  </div>
  </div>
<% end %>
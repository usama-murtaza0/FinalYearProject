<% if @orders.present? %>
  <div class="py-3">
    <div class="container">
      <div class="row hidden-md-up">  
        <% @orders.each do |order| %>
          <a href="<%= order_path(order.id) %>">
          <div class="card-single-show col-md-6">
            <div class="card-body">
              <div class="card-block">
                <p>Name: <%= order.name %></p>
                <p>Email: <%= order.email %></p>
                <p>Line Items: </p>
                <% order.line_items.each do |item| %>
                  <% if item.product.pictures.present? %>
                    <img src="<%= item.product.pictures[0] %>" class="d-block user-select-none" width="100%" height="250" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice"></img>
                  <% else %>
                    <%= image_tag "placeholder_product.png" , class: "placeholder-img" %>
                  <% end %>
                  <h3 class="card-header"><%= item.quantity %> x <%= item.product.title %></h3>
                  <div class="card-body">
                    <% if item.product.sale %>
                      <h5 class="card-title"><%= item.product.sale_price %> 
                      <label class="card-subtitle text-muted">Rs</h5></label>
                    <% else %>
                      <h5 class="card-title"><%= item.product.price %> 
                      <label class="card-subtitle text-muted">Rs</h5></label>
                    <% end %>
                  </div>
                  <div class="card-body">
                    <p class="card-text"><small><%= truncate(item.product.description, :length => 20) %>...See More</small></p>
                  </div>
                </a>
                <% end %>
              </div>
            </div>
          </div>
      </div>
        <% end %>
    </div>
  </div>   
<% else %>
  <div id="notfound">
		<div class="notfound">
			<div class="notfound-404">
				<h1>404</h1>
			</div>
			<h2>Oops! This Page Could Not Be Found</h2>
			<p>Sorry but there are no orders to show at the moment</p>
			<a href="<%= root_path %>">Go To Homepage</a>
		</div>
	</div>
<% end %>
            
                    